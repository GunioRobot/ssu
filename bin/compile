#!/bin/bash

cd "$(dirname "$0")/.."
source ./lib/common.sh

which -s coffee 2>/dev/null ||
  die "CoffeeScript is not installed. Please make sure 'coffee' is in your PATH."

if [[ "$1" == "-w" || "$1" == "--watch" ]]; then
  exec coffee --compile --watch application/chrome/content
else
  exec coffee --compile application/chrome/content/**/*.coffee
fi
